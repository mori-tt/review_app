<!DOCTYPE html>
<html lang="ja">
  <head>
    <%- include("../../_share/metadata.ejs") %>
    <title>口コミの投稿</title>
    <%- include("../../_share/stylesheets.ejs")%>
  </head>
  <body>
    <div class="outerframe">
      <%- include("../../_share/navbar.ejs") %>
      <main role="main" class="container">
        <div class="border-bottom my-5">
          <h1>口コミの投稿</h1>
        </div>
        <div>
          <form action="/account/reviews/regist/confirm" method="POST">
            <input type="hidden" id="shopId" name="shopId" value="<%= shopId %>" />

            <div class="mb-3 row">
              <label for="shopName" class="col-sm-2 col-form-label">店舗</label>
              <div class="col-sm-10">
                <input
                  type="text"
                  readonly
                  class="form-control-plaintext"
                  id="shopName"
                  name="shopName"
                  value="<%= shopName %>" />
              </div>
            </div>

            <div class="mb-3 row">
              <label for="visit" class="col-sm-2 col-form-label">訪問日</label>
              <div class="col-sm-10">
                <input type="text" readonly class="form-control" id="visit" name="visit" value="<%= review.visit ?
                moment(review.visit).format("YYYY/MM/DD"):"" %>" />
              </div>
            </div>

            <div class="mb-3 row">
              <label for="score" class="col-sm-2 col-form-label">評価</label>
              <div class="col-sm-10">
                <input type="text" readonly class="form-control" id="score" name="score" value="<%= review.score %>" />
              </div>
            </div>

            <div class="mb-3 row">
              <label for="description" class="col-sm-2 col-form-label">本文</label>
              <div class="col-sm-10">
                <textarea readonly class="form-control" name="description" id="description" rows="5">
                  <%= (review.description || "") %>
                </textarea>
              </div>
            </div>

            <div class="mb-3 row">
              <div class="offset-sm-2 col-sm-10">
                <input type="submit" class="btn btn-primary" value="修正" />
                <input type="submit" class="btn btn-primary" value="登録" />
              </div>
            </div>
          </form>
        </div>
      </main>
      <%- include("../../_share/footer.ejs")%>
    </div>
    <%- include("../../_share/javascripts.ejs") %>
  </body>
</html>
